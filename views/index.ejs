<script>
function loadDrones() {
  var xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
      if (this.readyState == 4 && this.status == 200) {
          $('#main').hide().html(this.responseText).fadeIn();           
          updateVars();
          loadContentNetworkFirst();
    }
  };
  xhttp.open("GET", "drones", true);
  xhttp.send();
}
</script>

