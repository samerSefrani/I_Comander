        return `<form id='edit_form_${d.did}' class="pure-form pure-form-aligned" enctype='multipart/form-data'
                      action="#" style="height: 100%; background: mintcream">
                    <input hidden name='did' type="number" value='${d.did}'>
                    <fieldset>

